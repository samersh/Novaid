# Remove react-native-maps before autolinking (incompatible with RN 0.73.4)
react_native_maps_path = File.join(__dir__, '..', 'node_modules', 'react-native-maps')
if File.exist?(react_native_maps_path)
  FileUtils.rm_rf(react_native_maps_path)
  Pod::UI.puts "Removed react-native-maps (incompatible with RN 0.73.4)".yellow
end

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

# react-native-permissions setup
def node_require(script)
  require Pod::Executable.execute_command('node', ['-p',
    "require.resolve('#{script}', {paths: [process.argv[1]]})", __dir__]).strip
end
node_require('react-native-permissions/scripts/setup.rb')

target 'Novaid' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Permissions - use setup_permissions to configure which handlers to include
  setup_permissions([
    'Camera',
    'LocationAccuracy',
    'LocationAlways',
    'LocationWhenInUse',
    'Microphone',
  ])

  target 'NovaidTests' do
    inherit! :complete
  end

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      end
    end

    # Also disable sandboxing for the main project
    installer.generated_projects.each do |project|
      project.targets.each do |target|
        target.build_configurations.each do |config|
          config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
        end
      end
    end
  end
end
